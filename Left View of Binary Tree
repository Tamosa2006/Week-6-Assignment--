class Node:
    def __init__(self, val):  
        self.data = val
        self.left = None
        self.right = None

from collections import deque

class Solution:
    def LeftView(self, root):
        if not root:
            return []

        result = []
        queue = deque([root])

        while queue:
            level_size = len(queue)

            for i in range(level_size):
                node = queue.popleft()
                if i == 0:
                    result.append(node.data)

                if node.left:
                    queue.append(node.left)
                if node.right:
                    queue.append(node.right)

        return result
