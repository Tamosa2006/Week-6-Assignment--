
class Node:
    def __init__(self, val):
        self.data = val
        self.left = None
        self.right = None


class Solution:
    
    def height(self, root):
        if root is None:
            return -1  

        left_height = self.height(root.left)
        right_height = self.height(root.right)

        return max(left_height, right_height) + 1
